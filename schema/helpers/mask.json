{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Mask",
    "description": "Mask for layer content.",
    "allOf": [
        {
            "properties": {
                "inv": {
                    "title": "Inverted",
                    "type": "boolean",
                    "default": false
                },
                "mode": {
                    "title": "Mode",
                    "$ref": "#/$defs/constants/mask-mode",
                    "default": "a"
                },
                "o": {
                    "title": "Opacity",
                    "$ref": "#/$defs/properties/scalar-property"
                },
                "pt": {
                    "title": "Shape",
                    "$ref": "#/$defs/properties/bezier-property"
                },
                "x": {
                    "title": "Expansion",
                    "$ref": "#/$defs/properties/scalar-property"
                }
            }
        }
    ]
}
